rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---

    function isAuthenticated() {
      return request.auth != null;
    }

    // Safer get user data function
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    // Role checks (Use with caution for clients as they might lack a user doc)
    function hasRole(role) {
      return isAuthenticated() && getUserData().role == role;
    }

    function isStaff() {
      return isAuthenticated() && getUserData().role in ['administrador', 'vendedor', 'tecnico'];
    }

    function isAdmin() {
      return hasRole('administrador');
    }

    // --- Collection Rules ---

    // Users: Complex rules for privacy and role management
    match /users/{userId} {
      allow read: if isAuthenticated() && (request.auth.uid == userId || isStaff());
      
      allow create: if isAuthenticated() && (request.auth.uid == userId || isStaff());
      
      allow update: if isAuthenticated() && (
        // User updating their own profile (excluding role)
        (request.auth.uid == userId && 
         !request.resource.data.diff(resource.data).affectedKeys().hasAny(['role', 'roleUpdatedAt', 'roleUpdatedBy'])) ||
        // Admin can update everything
        isAdmin()
      );
      
      allow delete: if isAdmin();
    }

    // Catalog (Products, Services, Categories) & Config
    match /products/{productId} {
      allow read: if true;
      allow write: if isStaff();
    }
    
    match /services/{serviceId} {
      allow read: if true;
      allow write: if isStaff();
    }
    
    match /categories/{categoryId} {
      allow read: if true;
      allow write: if isStaff();
    }

    match /banners/{bannerId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /config/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Quotes & Orders
    match /quotes/{quoteId} {
      allow read: if isAuthenticated() && (
        resource.data.get('customerUid', '') == request.auth.uid ||
        resource.data.get('clientId', '') == request.auth.uid ||
        isStaff()
      );
      allow create: if isStaff();
      allow update: if isAuthenticated() && (
        isStaff() || 
        ((resource.data.get('customerUid', '') == request.auth.uid) && 
         request.resource.data.status in ['approved', 'rejected'])
      );
      allow delete: if isAdmin();
    }

    match /orders/{orderId} {
      allow read: if isAuthenticated() && (
        resource.data.get('userId', '') == request.auth.uid ||
        resource.data.get('originalQuote', {}).get('customerUid', '') == request.auth.uid ||
        isStaff()
      );
      allow create: if isAuthenticated() && (
        request.resource.data.get('userId', '') == request.auth.uid ||
        isStaff()
      );
      allow update: if isStaff();
      allow delete: if isAdmin();
    }

    // Reservations
    match /reservations/{reservationId} {
      allow read: if isAuthenticated() && (
        resource.data.get('userId', '') == request.auth.uid ||
        isStaff()
      );
      allow create: if isAuthenticated() && (
        request.resource.data.get('userId', '') == request.auth.uid ||
        isStaff()
      );
      allow update: if isAuthenticated() && (
        isStaff() || 
        (resource.data.get('userId', '') == request.auth.uid &&
         request.resource.data.diff(resource.data).affectedKeys().hasOnly(['status']))
      );
      allow delete: if isAdmin();
    }

    // Notifications
    match /notifications/{notificationId} {
      allow read: if isAuthenticated() && (
        resource.data.get('receiverId', '') == request.auth.uid ||
        isStaff() || 
        resource.data.get('receiverRole', '') == getUserData().role ||
        resource.data.get('receiverRole', '') == 'all'
      );
      allow create: if isAuthenticated();
      allow update: if isAuthenticated() && (
        (resource.data.get('receiverId', '') == request.auth.uid && 
         request.resource.data.diff(resource.data).affectedKeys().hasOnly(['isRead'])) ||
        isStaff()
      );
      allow delete: if resource.data.get('receiverId', '') == request.auth.uid || isStaff();
    }

    // Suppliers (Proveedores)
    match /suppliers/{supplierId} {
      allow read: if isStaff();
      allow write: if isAdmin();
    }
  }
}
